@model IEnumerable<string>

    <a class="btn btn-secondary btn-block" asp-action="ShowListProducts" asp-controller="Product" asp-route-category="">
        Home
    </a>

    @foreach(var category in Model){
         <a class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-secondary")" asp-action="ShowListProducts" asp-controller="Product" asp-route-category="@category" asp-route-productPage="1">
       @category
    </a>
    }