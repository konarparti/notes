@*строго типизированное представление*@
@model GuestResponse
@{
    ViewData["Title"] = "AnswerForm";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Answer form</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action=AnswerForm method=post>
                <div asp-validation-summary=All></div>
                <div class="form-group">
                    <label asp-for=Name>Your name:</label>
                    <input asp-for=Name />
                </div>
                <div class="form-group">
                    <label asp-for=Email>Your email:</label>
                    <input asp-for=Email />
                </div>
                <div class="form-group">
                    <label asp-for=PhoneNumber>Your phone number:</label>
                    <input asp-for=PhoneNumber />
                </div>
                <div class="form-group">
                    <label>Will you attend?</label>
                    <select asp-for=WillAttend>
                        <option value="">Choose an option</option>
                        <option value=true>Yes, I will be there</option>
                        <option value=false>No, I can't come</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit answer
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

